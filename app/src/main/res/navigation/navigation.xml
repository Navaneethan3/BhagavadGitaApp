<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.wirelessalien.android.bhagavadgita.fragment.HomeFragment"
        android:label="Home" >
        <action
            android:id="@+id/action_homeFragment_to_allVerseFragment"
            app:destination="@id/allVerseFragment"
            app:popUpTo="@id/homeFragment"/>
    </fragment>
    <fragment
        android:id="@+id/allVerseFragment"
        android:name="com.wirelessalien.android.bhagavadgita.fragment.AllVerseFragment"
        android:label="All Verse" >
        <action
            android:id="@+id/action_allVerseFragment_to_favouriteFragment"
            app:destination="@id/favouriteFragment"
            app:popUpTo="@id/homeFragment"/>
    </fragment>

    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.wirelessalien.android.bhagavadgita.fragment.FavouriteFragment"
        android:label="Favourites" >
        <action
            android:id="@+id/action_favouriteFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"/>
    </fragment>
</navigation>
